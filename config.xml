<?xml version='1.0' encoding='utf-8'?>
<widget id="ec.reviceci.app" version="0.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">

  <name>ReciVeci</name>
  <description>
      Iniciativa ciudadana enfocada a incrementar y potenciar la labor de los recicladores de base en Ecuador a través de la educación e involucramiento consciente de los ciudadanos.
  </description>
  <author email="info@reciveci.ec" href="http://www.reciveci.ec">
      ReciVeci
  </author>


  <!-- Allow navigation -->
  <plugin name="cordova-plugin-whitelist" />
  <allow-navigation href="*" />
  <allow-navigation href="data:*" />


  <plugin name="cordova-plugin-inappbrowser" />
  <access origin="*" />
  <!-- <plugin name="InAppBrowser" value="org.apache.cordova.InAppBrowser" />
  <access origin="*" browserOnly="true"/> -->

  <platform name="android" />
  <platform name="ios" />



  <content src="index.html" />
  <icon src="icon.png" />
  <splash src="splash.png" />




  <platform name="android">
    <preference name="orientation" value="portrait" />
  </platform>

  <platform name="ios">
    <preference name="orientation" value="portrait" />
  </platform>




  <feature name="InAppBrowser">
    <param name="android-package" value="org.apache.cordova.InAppBrowser"/>
  </feature>
  <feature name="InAppBrowser">
      <param name="ios-package" value="CDVInAppBrowser" />
  </feature>


</widget>
